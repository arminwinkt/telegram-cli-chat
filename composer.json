{
    "name": "arminwinkt/telegram-cli-chat",
    "description": "A telegram client for the CLI based on PHP.",
    "type": "project",
    "license": "MIT",
    "authors": [
        {
            "name": "Armin Winkler"
        }
    ],
    "require": {
        "php": "^7.1.3",
        "amphp/amp": "^2.1",
        "laravel-zero/framework": "5.8.*"
    },
    "require-dev": {
        "mockery/mockery": "^1.0",
        "phpunit/phpunit": "^7.5"
    },
    "autoload": {
        "psr-4": {
            "App\\": "app/",
            "danog\\": "madeline.phar/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "config": {
        "preferred-install": "dist",
        "sort-packages": true,
        "optimize-autoloader": true
    },
    "scripts": {
        "post-create-project-cmd": [
            "@php application app:rename"
        ]
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "bin": ["telegram-cli-chat"]
}
